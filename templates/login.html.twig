{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <form method="post" class="mt-5">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Veuillez vous connecter</h1>

                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                           class="form-control mt-1"
                           autocomplete="email" required autofocus placeholder="Votre adresse email ...">

                    <label for="inputPassword" class="mt-3">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mt-1"
                           autocomplete="current-password" required placeholder="Votre mot de passe ...">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-lm btn-primary mt-4" type="submit">Se connecter</button>
                </form>

                {% if app.user %}
                    <div class="mt-3" style="text-align: right">
                        Vous êtes connecté en tant que {{ app.user.lastname }} {{ app.user.firstname }},
                        <a href="{{ path('app_logout') }}">Deconnexion</a>
                    </div>
                {% endif %}
                <p style="text-align: right">Pour vous inscrire <a href="{{ path('register') }}">cliquer ici</a></p>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
{% endblock %}
