{% extends 'base.html.twig' %}

{% block title %} Modifier votre mot de passe {% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <h1 class="mt-4" style="text-align: center"> Modifier votre mot de passe</h1>
                <div class="mt-2">
                    {% if notification %}
                        <div class="alert alert-info"> {{ notification }} </div>
                    {% endif %}

                    {{ form_start(form) }}
                    <div class="mt-1">
                        {{ form_label(form.firstname) }}
                        {{ form_widget(form.firstname) }}
                    </div>
                    <div class="mt-2">
                        {{ form_label(form.lastname) }}
                        {{ form_widget(form.lastname) }}
                    </div>
                    <div class="mt-2">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="mt-2">
                        {{ form_label(form.old_password) }}
                        {{ form_widget(form.old_password) }}
                    </div>
                    <div class="mt-2">
                        {{ form_widget(form.new_password) }}
                    </div>
                    <div class="mt-3">
                        {{ form_widget(form.submit) }}
                    </div>
                    {{ form_end(form) }}

                    <p style="text-align: right" class="mt-1"> Retourner Ã  <a href="{{ path('account') }}">mon
                            compte</a></p>
                </div>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
{% endblock %}